{
  "name": "runmate",
  "displayName": "RunMate",
  "description": "Quick script runner with intelligent status bar buttons for package.json scripts. Auto-detects npm, pnpm, yarn, and bun with multi-root workspace support.",
  "version": "1.0.0",
  "publisher": "SanekxArcs",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SanekxArcs/runmate"
  },
  "homepage": "https://github.com/SanekxArcs/runmate/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/SanekxArcs/runmate/issues"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Productivity"
  ],
  "keywords": [
    "npm",
    "pnpm",
    "yarn",
    "bun",
    "scripts",
    "tasks",
    "runner",
    "quick-launch"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./extension.js",
  "dependencies": {
    "jsonc-parser": "^3.2.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "runmate.stopRunningScripts",
        "title": "RunMate: Stop Running Scripts"
      },
      {
        "command": "runmate.showAllScripts",
        "title": "RunMate: Show All Scripts"
      }
    ],
    "keybindings": [
      {
        "command": "runmate.showAllScripts",
        "key": "ctrl+alt+q"
      }
    ],
    "configuration": [
      {
        "title": "RunMate",
        "properties": {
          "runmate.useDynamicScriptParsing": {
            "type": "boolean",
            "default": true,
            "description": "Enable dynamic status bar buttons generated from package.json scripts."
          },
          "runmate.workspaceMode": {
            "type": "string",
            "enum": [
              "first",
              "pick",
              "all"
            ],
            "default": "first",
            "description": "How to handle multi-root workspaces when building buttons: first folder, pick per run, or all folders."
          },
          "runmate.excludeScripts": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "test",
              "postinstall",
              "preinstall"
            ],
            "description": "List of scripts to ignore when generating status bar buttons."
          },
          "runmate.maxDynamicScriptButtons": {
            "type": "number",
            "default": 8,
            "minimum": 0,
            "description": "Maximum number of script buttons shown before collapsing into an overflow menu."
          },
          "runmate.scriptOrder": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "dev",
              "start",
              "build",
              "test",
              "lint"
            ],
            "description": "Priority order for scripts. Scripts listed here will appear first."
          },
          "runmate.reuseTerminalForScripts": {
            "type": "boolean",
            "default": true,
            "description": "Reuse dedicated terminals per script instead of creating a new terminal each time."
          },
          "runmate.askBeforeKill": {
            "type": "boolean",
            "default": true,
            "description": "Ask for confirmation before stopping a running script when re-running from the status bar."
          }
        }
      }
    ]
  }
}
